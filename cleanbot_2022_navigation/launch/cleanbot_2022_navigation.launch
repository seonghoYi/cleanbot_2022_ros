<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find vacuum_cleaner_navigation)/maps/recycle/map.yaml"/>
  <arg name="open_rviz" default="false"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <include file="$(find cleanbot_2022_navigation)/launch/cleanbot_2022_rtabmap.launch">

  <!-- AMCL -->
  <!--include file="$(find cleanbot_2022_navigation)/launch/amcl.launch"/-->

  <!-- move_base -->
  <include file="$(find cleanbot_2022_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- custom costmap -->
  <!--node pkg="vacuum_cleaner_navigation" name="costmap_clear" type="costmap_clear"/-->

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find cleanbot_2022_navigation)/rviz/vacuum_cleaner_navigation_recycle.rviz"/>
  </group>
</launch>
