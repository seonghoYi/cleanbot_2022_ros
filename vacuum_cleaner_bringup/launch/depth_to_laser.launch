<launch>
  <node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" respawn="false" name="depthimage_to_laserscan" output="screen">
    <!--
      <remap from="image" to="/camera/depth/image_rect_raw"/>
    -->
    <remap from="image" to="/camera/aligned_depth_to_color/image_raw"/>
    <remap from="scam" to="/scan"/>
    <param name="scan_height" value="10"/>
    <param name="scan_time" value="0.03"/>
    <param name="range_min" value="0.45"/>
    <param name="range_max" value="8.00"/>
  </node>
</launch>